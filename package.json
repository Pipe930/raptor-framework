    "eslint": "9.39.2",
    "jest": "30.2.0",
    "nodemon": "3.1.11",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0"
  }
